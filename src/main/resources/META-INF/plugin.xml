<idea-plugin version="2">
    <!-- general information -->
    <id>com.kalessil.phpStorm.yii2inspections</id>
    <name>Yii2 Inspections</name>
    <version>0.0.1-dev</version>
    <vendor email="kalessil@gmail.com">Vladimir Reznichenko</vendor>

    <!-- description and change notes -->
    <description><![CDATA[
      Yii2 Inspections for PhpStorm/IdeaUltimate
    ]]></description>
    <change-notes><![CDATA[
      2 Jan 2017: project skeleton<br>
    ]]>
    </change-notes>

    <!-- platform dependencies declaration -->
    <idea-version since-build="162.1889"/> <!-- PS 2016.2 and newer -->
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable instance="com.kalessil.phpStorm.yii2inspections.Yii2InspectionsProjectConfig"/>

        <localInspection language="PHP" groupPath="PHP,Yii2 Inspections"
            shortName="PropertyFeatureAnnotatedInspection" displayName="@property Inspector"
            groupName="Architecture"                       enabledByDefault="true" level="WARNING"
            implementationClass="com.kalessil.phpStorm.yii2inspections.inspectors.PropertyFeatureAnnotatedInspector"/>
    </extensions>

    <actions>
        <!-- see also com.intellij.codeInsight.actions.OptimizeImportsAction -->
        <!-- see also https://github.com/ahubold/intellij-optimize-imports-for-scope -->
        <!-- see also .../IntelliJ IDEA 2016.2.5/lib/resources.jar!/idea/PlatformLangActionManager.xml:59 -->
        <action id="yii2UpdateTranslations"
                class="com.kalessil.phpStorm.yii2inspections.actors.UpdateTranslationsActor"
                text="Update Yii2 translations" description="Adds missing and drops unused translations"
        >
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="InspectCode"/>
        </action>
    </actions>

</idea-plugin>